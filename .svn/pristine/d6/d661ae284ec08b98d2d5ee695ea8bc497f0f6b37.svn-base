    public static Property rentProperty(Connection conn, Household investor){
        double maxUtility = 0.0;
        Property selection = null;
        for (Property purchasable : investor.getRentableProperties()) {
            try {
                if (purchasable.getDivision() != null && purchasable.getUtility() == Double.NEGATIVE_INFINITY) {
                    double equipUtility = 0.0;
                    double transportUtility = 0.0;
                    for (Equipment equipment : equipments.get(purchasable.getDivision())) {
                        Statement s = conn.createStatement();
                        String query = "SELECT ST_DWithin(equipment.geom,property.geom, 0.008) FROM (SELECT geom FROM " +
                                equipment.getType() + " WHERE gid = " + equipment.getId() + ") AS equipment, (SELECT " +
                                "geom FROM properties WHERE gid = " + purchasable.getId() + ") AS property";
                        ResultSet r = s.executeQuery(query);
                        String d = null;
                        if(r.next()) d = r.getString(1);
                        if(d != null) {
                            if (d.equals("t")) System.out.println(d);
                            else equipUtility++;
                        }
                        r.close();
                        s.close();
                    }
                    for (TransportNetwork network : primaryNetwork.get(purchasable.getDivision())) {
                        Statement s = conn.createStatement();
                        String query = "SELECT ST_Distance(equipment.geom,property.geom) FROM (SELECT geom FROM " +
                                "red_primaria WHERE gid = " + network.getId() + ") AS equipment, (SELECT " +
                                "geom FROM properties WHERE gid = " + purchasable.getId() + ") AS property";
                        ResultSet r = s.executeQuery(query);
                        if(r.next()){
                            transportUtility += r.getFloat(1);
                        }
                        r.close();
                        s.close();
                    }
                    transportUtility = (transportUtility < 666581)? (666581 - transportUtility): 0;
                    purchasable.setUtility(0.25*(equipUtility/(equipments.size() + 0.0)) + 0.75*(transportUtility));
                }
            }
            catch (SQLException e){}
            if(purchasable.getUtility() > maxUtility){
                maxUtility = purchasable.getUtility();
                selection = purchasable;
            }
        }
        if (selection != null){
            investor.setPreviousNetMonthlyIncome(investor.getCurrentNetMonthlyIncome());
            investor.setCurrentNetMonthlyIncome(investor.getPreviousNetMonthlyIncome() - selection.getCurrentCapitalizedRent());
        }
        return selection;
    }

